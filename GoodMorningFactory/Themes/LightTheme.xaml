    <SolidColorBrush x:Key="SecondaryBackground" Color="White"/>
    <SolidColorBrush x:Key="ToolbarBackground" Color="WhiteSmoke"/>
    <SolidColorBrush x:Key="PrimaryText" Color="Black"/>
    <SolidColorBrush x:Key="SecondaryText" Color="Gray"/>
</ResourceDictionary>