<!-- UI/Styles/LightTheme.xaml -->
<!-- *** ملف جديد: تعريفات الألوان والفرش الخاصة بالمظهر الفاتح *** -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ألوان الخلفيات -->
    <SolidColorBrush x:Key="PrimaryBackground" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="SecondaryBackground" Color="White"/>
    <SolidColorBrush x:Key="ToolbarBackground" Color="#EAEAEA"/>

    <!-- ألوان النصوص -->
    <SolidColorBrush x:Key="PrimaryText" Color="Black"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#555555"/>

    <!-- ألوان الحدود -->
    <SolidColorBrush x:Key="PrimaryBorder" Color="#D0D0D0"/>

</ResourceDictionary>