<!-- UI/Styles/DarkTheme.xaml -->
<!-- *** ملف جديد: تعريفات الألوان والفرش الخاصة بالمظهر الداكن *** -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ألوان الخلفيات -->
    <SolidColorBrush x:Key="PrimaryBackground" Color="#2D2D30"/>
    <SolidColorBrush x:Key="SecondaryBackground" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="ToolbarBackground" Color="#3E3E42"/>

    <!-- ألوان النصوص -->
    <SolidColorBrush x:Key="PrimaryText" Color="White"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#CCCCCC"/>

    <!-- ألوان الحدود -->
    <SolidColorBrush x:Key="PrimaryBorder" Color="#555555"/>

</ResourceDictionary>