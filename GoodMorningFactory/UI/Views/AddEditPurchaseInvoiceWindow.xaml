<!-- UI/Views/AddEditPurchaseInvoiceWindow.xaml -->
<!-- *** ملف جديد: نافذة تسجيل فاتورة مورد *** -->
<Window x:Class="GoodMorningFactory.UI.Views.AddEditPurchaseInvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        mc:Ignorable="d" Title="تسجيل فاتورة مورد" Height="600" Width="900"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStartupLocation="CenterOwner" FlowDirection="RightToLeft">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="معلومات الفاتورة" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="المورد:"/>
                <ComboBox x:Name="SupplierComboBox" Grid.Row="0" Grid.Column="1" Margin="5" DisplayMemberPath="Name" SelectedValuePath="Id"/>
                <Label Grid.Row="0" Grid.Column="2" Content="رقم فاتورة المورد:"/>
                <TextBox x:Name="InvoiceNumberTextBox" Grid.Row="0" Grid.Column="3" Margin="5"/>

                <Label Grid.Row="1" Grid.Column="0" Content="تاريخ الفاتورة:"/>
                <DatePicker x:Name="InvoiceDatePicker" Grid.Row="1" Grid.Column="1" Margin="5"/>
                <Label Grid.Row="1" Grid.Column="2" Content="تاريخ الاستحقاق:"/>
                <DatePicker x:Name="DueDatePicker" Grid.Row="1" Grid.Column="3" Margin="5"/>
            </Grid>
        </GroupBox>

        <DataGrid x:Name="InvoiceItemsDataGrid" Grid.Row="1" Margin="0,10,0,0" CanUserAddRows="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridComboBoxColumn x:Name="ProductColumn" Header="المنتج/المادة" SelectedValueBinding="{Binding ProductId}" SelectedValuePath="Id" DisplayMemberPath="Name" Width="3*"/>
                <DataGridTextColumn Header="الكمية" Binding="{Binding Quantity}" Width="*"/>
                <DataGridTextColumn Header="سعر الوحدة" Binding="{Binding UnitPrice, StringFormat=N2}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="2" Content="💾 حفظ الفاتورة" HorizontalAlignment="Left" Padding="15,5" Margin="5" Click="SaveButton_Click"/>
    </Grid>
</Window>