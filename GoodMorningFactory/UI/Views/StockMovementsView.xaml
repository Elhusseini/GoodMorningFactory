<!-- UI/Views/StockMovementsView.xaml -->
<!-- *** ملف جديد: واجهة عرض سجل حركات المخزون *** -->
<UserControl x:Class="GoodMorningFactory.UI.Views.StockMovementsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="#F5F5F5" FlowDirection="RightToLeft">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ToolBarTray Grid.Row="0">
            <ToolBar>
                <TextBlock Text="بحث:" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="SearchTextBox" Width="200" KeyUp="Filter_KeyUp"/>
                <TextBlock Text="نوع الحركة:" VerticalAlignment="Center" Margin="5"/>
                <ComboBox x:Name="TypeFilterComboBox" Width="150" SelectionChanged="Filter_Changed"/>
                <TextBlock Text="من تاريخ:" VerticalAlignment="Center" Margin="5"/>
                <DatePicker x:Name="FromDatePicker" Width="120" SelectedDateChanged="Filter_Changed"/>
                <TextBlock Text="إلى تاريخ:" VerticalAlignment="Center" Margin="5"/>
                <DatePicker x:Name="ToDatePicker" Width="120" SelectedDateChanged="Filter_Changed"/>
            </ToolBar>
        </ToolBarTray>

        <DataGrid x:Name="MovementsDataGrid" Grid.Row="1" Margin="5" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="التاريخ" Binding="{Binding Date, StringFormat='g'}" Width="*"/>
                <DataGridTextColumn Header="نوع الحركة" Binding="{Binding TransactionType}" Width="*"/>
                <DataGridTextColumn Header="رقم المرجع" Binding="{Binding ReferenceNumber}" Width="*"/>
                <DataGridTextColumn Header="المنتج" Binding="{Binding ProductName}" Width="2*"/>
                <!-- *** بداية الإصلاح: استخدام CellStyle لتلوين الخلفية *** -->
                <DataGridTextColumn Header="كمية داخلة" Binding="{Binding QuantityIn}" Width="*">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Background" Value="#E8F5E9"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="كمية خارجة" Binding="{Binding QuantityOut}" Width="*">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Background" Value="#FFEBEE"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <!-- *** نهاية الإصلاح *** -->
                <DataGridTextColumn Header="المستخدم" Binding="{Binding User}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" BorderThickness="0,1,0,0" BorderBrush="LightGray" Padding="5" Margin="0,5,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="PreviousPageButton" Content="&lt; السابق" Margin="5,0" Click="PreviousPageButton_Click"/>
                    <Button x:Name="NextPageButton" Content="التالي &gt;" Margin="5,0" Click="NextPageButton_Click"/>
                </StackPanel>
                <TextBlock x:Name="PageInfoTextBlock" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>