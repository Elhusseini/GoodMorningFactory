<!-- UI/Views/SalesOrdersView.xaml -->
<!-- *** تحديث: تمت إضافة زر الإلغاء مع Style Triggers *** -->
<UserControl x:Class="GoodMorningFactory.UI.Views.SalesOrdersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="#F5F5F5" FlowDirection="RightToLeft">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ToolBarTray Grid.Row="0">
            <ToolBar>
                <Button Content="➕ إنشاء أمر بيع جديد" Margin="5" Padding="5" Click="AddOrderButton_Click"/>
            </ToolBar>
        </ToolBarTray>

        <DataGrid x:Name="OrdersDataGrid" Grid.Row="1" Margin="0,10,0,0"
                  IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="رقم الأمر" Binding="{Binding SalesOrderNumber}" Width="*"/>
                <DataGridTextColumn Header="العميل" Binding="{Binding Customer.CustomerName}" Width="2*"/>
                <DataGridTextColumn Header="تاريخ الأمر" Binding="{Binding OrderDate, StringFormat='d'}" Width="*"/>
                <DataGridTextColumn Header="تاريخ الشحن المتوقع" Binding="{Binding ExpectedShipDate, StringFormat='d'}" Width="*"/>
                <DataGridTextColumn Header="الإجمالي" Binding="{Binding TotalAmount, StringFormat={}{0:C}}" Width="*"/>
                <DataGridTextColumn Header="الحالة" Binding="{Binding Status}" Width="*"/>
                <DataGridTemplateColumn Header="إجراءات" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <!-- *** بداية التحديث *** -->
                                <Button Content="عرض/تعديل" Margin="2" Click="EditButton_Click"/>
                                <Button Content="إنشاء شحنة" Margin="2" Click="CreateShipmentButton_Click" Background="LightBlue">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Shipped">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Invoiced">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Content="إلغاء الأمر" Margin="2" Click="CancelOrderButton_Click" Background="OrangeRed" Foreground="White">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Shipped">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Invoiced">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <!-- *** نهاية التحديث *** -->
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>