<!-- UI/Views/AddShipmentWindow.xaml -->
<!-- *** ملف جديد: نافذة إنشاء شحنة جديدة *** -->
<Window x:Class="GoodMorningFactory.UI.Views.AddShipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="إنشاء شحنة جديدة" Height="600" Width="900"
        WindowStartupLocation="CenterOwner" FlowDirection="RightToLeft">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="معلومات الشحنة" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="أمر البيع:"/>
                <TextBox x:Name="SalesOrderNumberTextBox" Grid.Row="0" Grid.Column="1" Margin="5" IsReadOnly="True" Background="#EEEEEE"/>

                <Label Grid.Row="1" Grid.Column="0" Content="شركة الشحن:"/>
                <TextBox x:Name="CarrierTextBox" Grid.Row="1" Grid.Column="1" Margin="5"/>

                <Label Grid.Row="0" Grid.Column="2" Content="تاريخ الشحن:"/>
                <DatePicker x:Name="ShipmentDatePicker" Grid.Row="0" Grid.Column="3" Margin="5"/>

                <Label Grid.Row="1" Grid.Column="2" Content="رقم التتبع:"/>
                <TextBox x:Name="TrackingNumberTextBox" Grid.Row="1" Grid.Column="3" Margin="5"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="بنود الشحنة" Grid.Row="1" Margin="0,10,0,0">
            <DataGrid x:Name="ShipmentItemsDataGrid" CanUserAddRows="False" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="المنتج" Binding="{Binding ProductName}" IsReadOnly="True" Width="2*"/>
                    <DataGridTextColumn Header="الكمية المطلوبة" Binding="{Binding OrderedQuantity}" IsReadOnly="True" Width="*"/>
                    <DataGridTextColumn Header="الكمية المشحونة سابقاً" Binding="{Binding PreviouslyShippedQuantity}" IsReadOnly="True" Width="*"/>
                    <DataGridTextColumn Header="الكمية للشحن الآن" Binding="{Binding QuantityToShip}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <Button Content="✅ تأكيد الشحن" Grid.Row="2" HorizontalAlignment="Left" Margin="0,10,0,0" Padding="15,8" Click="ConfirmShipmentButton_Click"/>
    </Grid>
</Window>