<!-- UI/Views/SalesReturnsView.xaml -->
<!-- واجهة عرض وإدارة مرتجعات المبيعات -->
<UserControl x:Class="GoodMorningFactory.UI.Views.SalesReturnsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="#F5F5F5" FlowDirection="RightToLeft">
    <Grid Margin="10">
        <DataGrid x:Name="ReturnsDataGrid" IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="رقم المرتجع" Binding="{Binding ReturnNumber}" Width="*"/>
                <DataGridTextColumn Header="الفاتورة الأصلية" Binding="{Binding Sale.InvoiceNumber}" Width="*"/>
                <DataGridTextColumn Header="العميل" Binding="{Binding Sale.SalesOrder.Customer.CustomerName}" Width="2*"/>
                <DataGridTextColumn Header="تاريخ المرتجع" Binding="{Binding ReturnDate, StringFormat='d'}" Width="*"/>
                <DataGridTextColumn Header="إجمالي قيمة المرتجع" Binding="{Binding TotalReturnValue, StringFormat={}{0:C}}" Width="*" FontWeight="Bold"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>