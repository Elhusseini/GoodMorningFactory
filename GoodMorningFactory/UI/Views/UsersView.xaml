<!-- UI/Views/UsersView.xaml -->
<!-- *** تحديث: تم إصلاح مرجع المحول *** -->
<UserControl x:Class="GoodMorningFactory.UI.Views.UsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:GoodMorningFactory.UI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#F5F5F5" FlowDirection="RightToLeft">
    <UserControl.Resources>
        <converters:BooleanToStatusConverter x:Key="BooleanToStatusConverter"/>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ToolBarTray Grid.Row="0">
            <ToolBar>
                <Button x:Name="AddUserButton" Content="➕ إضافة مستخدم جديد" Margin="5" Padding="5" Click="AddUserButton_Click"/>
                <Button x:Name="EditUserButton" Content="✏️ تعديل المستخدم المحدد" Margin="5" Padding="5" Click="EditUserButton_Click"/>
            </ToolBar>
        </ToolBarTray>

        <DataGrid x:Name="UsersDataGrid" Grid.Row="1" Margin="0,10,0,0"
                  IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="اسم المستخدم" Binding="{Binding Username}" Width="*"/>
                <DataGridTextColumn Header="الدور" Binding="{Binding Role.Name}" Width="*"/>
                <DataGridTextColumn Header="الحالة" Binding="{Binding IsActive, Converter={StaticResource BooleanToStatusConverter}}" Width="*"/>
                <DataGridTextColumn Header="تاريخ الإنشاء" Binding="{Binding CreatedAt, StringFormat={}{0:d}}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>