<!-- UI/Views/ManagePermissionsWindow.xaml -->
<!-- *** ملف جديد: نافذة إدارة صلاحيات الأدوار *** -->
<Window x:Class="GoodMorningFactory.UI.Views.ManagePermissionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        mc:Ignorable="d" Title="إدارة صلاحيات الدور" Height="600" Width="500"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        WindowStartupLocation="CenterOwner" FlowDirection="RightToLeft">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="RoleNameTextBlock" Grid.Row="0" FontSize="16" FontWeight="Bold"/>
        <TreeView x:Name="PermissionsTreeView" Grid.Row="1" Margin="0,10,0,0">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                    <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}" Margin="2"/>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <Button Content="💾 حفظ الصلاحيات" Grid.Row="2" HorizontalAlignment="Left" Margin="5" Padding="10,5" Click="SavePermissions_Click"/>
    </Grid>
</Window>