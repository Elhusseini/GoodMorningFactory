<!-- UI/Views/AddEditSalesQuotationWindow.xaml -->
<!-- *** ملف جديد: نافذة إنشاء وتعديل عرض السعر *** -->
<Window x:Class="GoodMorningFactory.UI.Views.AddEditSalesQuotationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="إنشاء / تعديل عرض سعر" Height="700" Width="1100"
        WindowStartupLocation="CenterOwner" FlowDirection="RightToLeft">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="معلومات عرض السعر" Grid.Row="0" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="العميل:"/>
                <ComboBox x:Name="CustomerComboBox" Grid.Row="0" Grid.Column="1" Margin="5" DisplayMemberPath="CustomerName" SelectedValuePath="Id"/>

                <Label Grid.Row="1" Grid.Column="0" Content="تاريخ العرض:"/>
                <DatePicker x:Name="QuotationDatePicker" Grid.Row="1" Grid.Column="1" Margin="5"/>

                <Label Grid.Row="0" Grid.Column="2" Content="رقم العرض:"/>
                <TextBox x:Name="QuotationNumberTextBox" Grid.Row="0" Grid.Column="3" Margin="5" IsReadOnly="True" Background="#EEEEEE"/>

                <Label Grid.Row="1" Grid.Column="2" Content="صالح حتى:"/>
                <DatePicker x:Name="ValidUntilDatePicker" Grid.Row="1" Grid.Column="3" Margin="5"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="بنود عرض السعر" Grid.Row="1" Margin="10,0,10,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="بحث عن منتج:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox x:Name="SearchProductTextBox" Width="300" KeyUp="SearchProductTextBox_KeyUp"/>
                </StackPanel>

                <DataGrid x:Name="QuotationItemsDataGrid" Grid.Row="1" Margin="5" CanUserAddRows="False" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="المنتج" Binding="{Binding ProductName}" Width="3*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="الوصف" Binding="{Binding Description}" Width="3*"/>
                        <DataGridTextColumn Header="سعر الوحدة" Binding="{Binding UnitPrice, StringFormat=N2}" Width="*"/>
                        <DataGridTextColumn Header="الكمية" Binding="{Binding Quantity}" Width="*"/>
                        <DataGridTextColumn Header="الخصم" Binding="{Binding Discount, StringFormat=N2}" Width="*"/>
                        <DataGridTextColumn Header="الإجمالي" Binding="{Binding Subtotal, StringFormat=N2}" Width="*" IsReadOnly="True"/>
                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="❌" Click="RemoveItem_Click" Background="Transparent" BorderThickness="0" Foreground="Red"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <TextBlock Text="الإجمالي النهائي:" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock x:Name="TotalAmountTextBlock" Text="0.00" FontSize="16" FontWeight="Bold" Foreground="Blue" Margin="10,0" VerticalAlignment="Center"/>
            <Button Content="💾 حفظ" Width="120" Margin="20,0,5,0" Padding="8" Click="SaveButton_Click"/>
            <Button Content="إلغاء" Width="100" Margin="5" Padding="8" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>