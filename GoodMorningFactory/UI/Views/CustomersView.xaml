<!-- UI/Views/CustomersView.xaml -->
<!-- الكود الكامل لتصميم واجهة العملاء -->
<UserControl x:Class="GoodMorningFactory.UI.Views.CustomersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:GoodMorningFactory.UI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="#F5F5F5"
             FlowDirection="RightToLeft">
    <UserControl.Resources>
        <converters:BooleanToStatusConverter x:Key="BooleanToStatusConverter"/>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ToolBarTray Grid.Row="0">
            <ToolBar>
                <Button Content="➕ إضافة عميل جديد" Margin="5" Padding="5" Click="AddCustomerButton_Click"/>
                <Separator/>
                <TextBlock Text="بحث:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                <TextBox x:Name="SearchTextBox" Width="250" VerticalContentAlignment="Center" KeyUp="SearchTextBox_KeyUp"/>
                <TextBlock Text="الحالة:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                <ComboBox x:Name="StatusFilterComboBox" Width="120" SelectionChanged="Filter_Changed"/>
            </ToolBar>
        </ToolBarTray>

        <DataGrid x:Name="CustomersDataGrid" Grid.Row="1" Margin="0,10,0,0"
                  IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="كود العميل" Binding="{Binding CustomerCode}" Width="*"/>
                <DataGridTextColumn Header="اسم العميل" Binding="{Binding CustomerName}" Width="2*"/>
                <DataGridTextColumn Header="شخص الاتصال" Binding="{Binding ContactPerson}" Width="*"/>
                <DataGridTextColumn Header="رقم الهاتف" Binding="{Binding PhoneNumber}" Width="*"/>
                <DataGridTextColumn Header="حد الائتمان" Binding="{Binding CreditLimit, StringFormat={}{0:C}}" Width="*"/>
                <DataGridTextColumn Header="الحالة" Binding="{Binding IsActive, Converter={StaticResource BooleanToStatusConverter}}" Width="*"/>
                <DataGridTemplateColumn Header="إجراءات" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="تعديل" Margin="2" Click="EditButton_Click"/>
                                <Button Content="حذف" Margin="2" Click="DeleteButton_Click" Background="LightCoral"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" BorderThickness="0,1,0,0" BorderBrush="LightGray" Padding="5" Margin="0,5,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="PreviousPageButton" Content="&lt; السابق" Margin="5,0" Click="PreviousPageButton_Click"/>
                    <Button x:Name="NextPageButton" Content="التالي &gt;" Margin="5,0" Click="NextPageButton_Click"/>
                </StackPanel>

                <TextBlock x:Name="PageInfoTextBlock" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>