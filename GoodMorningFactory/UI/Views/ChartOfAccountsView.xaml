<!-- UI/Views/ChartOfAccountsView.xaml -->
<!-- *** تحديث: تم تعديل طريقة عرض البيانات في الـ TreeView *** -->
<UserControl x:Class="GoodMorningFactory.UI.Views.ChartOfAccountsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="800"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="#F5F5F5" FlowDirection="RightToLeft">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

		<ToolBarTray Grid.Row="0">
			<ToolBar>
				<Button Content="➕ إضافة حساب جديد" Click="AddAccount_Click"/>
				<Button Content="✏️ تعديل الحساب المحدد" Click="EditAccount_Click"/>
				<Button Content="🗑️ حذف الحساب المحدد" Click="DeleteAccount_Click"/>
			</ToolBar>
		</ToolBarTray>

        <TreeView x:Name="AccountsTreeView" Grid.Row="1" Margin="5">
            <TreeView.ItemTemplate>
				<!-- *** بداية التحديث: الربط بالخاصية الجديدة DisplayName *** -->
				<HierarchicalDataTemplate ItemsSource="{Binding Children}">
					<TextBlock Text="{Binding DisplayName}" Margin="2" FontWeight="SemiBold"/>
                </HierarchicalDataTemplate>
				<!-- *** نهاية التحديث *** -->
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</UserControl>