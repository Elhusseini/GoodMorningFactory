<!-- UI/Views/ShipmentsView.xaml -->
<!-- *** تحديث: تمت إضافة زر لتعديل الشحنة *** -->
<UserControl x:Class="GoodMorningFactory.UI.Views.ShipmentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="#F5F5F5" FlowDirection="RightToLeft">
    <Grid Margin="10">
        <DataGrid x:Name="ShipmentsDataGrid" IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="رقم الشحنة" Binding="{Binding ShipmentNumber}" Width="*"/>
                <DataGridTextColumn Header="رقم أمر البيع" Binding="{Binding SalesOrder.SalesOrderNumber}" Width="*"/>
                <DataGridTextColumn Header="العميل" Binding="{Binding SalesOrder.Customer.CustomerName}" Width="2*"/>
                <DataGridTextColumn Header="تاريخ الشحن" Binding="{Binding ShipmentDate, StringFormat='d'}" Width="*"/>
                <DataGridTextColumn Header="شركة الشحن" Binding="{Binding Carrier}" Width="*"/>
                <DataGridTextColumn Header="رقم التتبع" Binding="{Binding TrackingNumber}" Width="*"/>
                <DataGridTextColumn Header="الحالة" Binding="{Binding Status}" Width="*"/>
                <!-- *** بداية التحديث: إضافة عمود الإجراءات *** -->
                <DataGridTemplateColumn Header="إجراءات" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="تعديل" Margin="2" Click="EditButton_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!-- *** نهاية التحديث *** -->
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>