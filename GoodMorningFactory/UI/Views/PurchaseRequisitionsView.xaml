<!-- UI/Views/PurchaseRequisitionsView.xaml -->
<!-- *** تحديث: تمت إضافة الفلاتر المتقدمة وترقيم الصفحات والإجراءات *** -->
<UserControl x:Class="GoodMorningFactory.UI.Views.PurchaseRequisitionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="#F5F5F5" FlowDirection="RightToLeft">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ToolBarTray Grid.Row="0">
            <ToolBar>
                <Button Content="➕ إنشاء طلب شراء جديد" Margin="5" Padding="5" Click="AddRequisitionButton_Click"/>
                <Separator/>
                <TextBlock Text="بحث:" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="SearchTextBox" Width="200" KeyUp="Filter_KeyUp"/>
                <TextBlock Text="الحالة:" VerticalAlignment="Center" Margin="5"/>
                <ComboBox x:Name="StatusFilterComboBox" Width="120" SelectionChanged="Filter_Changed"/>
            </ToolBar>
        </ToolBarTray>

        <DataGrid x:Name="RequisitionsDataGrid" Grid.Row="1" Margin="5" IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="رقم الطلب" Binding="{Binding RequisitionNumber}" Width="*"/>
                <DataGridTextColumn Header="تاريخ الطلب" Binding="{Binding RequisitionDate, StringFormat='d'}" Width="*"/>
                <DataGridTextColumn Header="مقدم الطلب" Binding="{Binding RequesterName}" Width="*"/>
                <DataGridTextColumn Header="القسم" Binding="{Binding Department}" Width="*"/>
                <DataGridTextColumn Header="الغرض" Binding="{Binding Purpose}" Width="2*"/>
                <DataGridTextColumn Header="الحالة" Binding="{Binding Status}" Width="*" FontWeight="Bold"/>
                <DataGridTemplateColumn Header="إجراءات" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="تعديل" Margin="2" Click="EditButton_Click"/>
                                <Button Content="موافقة" Margin="2" Click="ApproveButton_Click" Background="DarkSeaGreen"/>
                                <Button Content="رفض" Margin="2" Click="RejectButton_Click" Background="IndianRed" Foreground="White"/>
                                <Button Content="تحويل إلى أمر شراء" Margin="2" Click="ConvertToPOButton_Click" Background="LightSkyBlue"/>
                                <Button Content="إلغاء" Margin="2" Click="CancelButton_Click" Background="OrangeRed" Foreground="White"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" BorderThickness="0,1,0,0" BorderBrush="LightGray" Padding="5" Margin="0,5,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="PreviousPageButton" Content="&lt; السابق" Margin="5,0" Click="PreviousPageButton_Click"/>
                    <Button x:Name="NextPageButton" Content="التالي &gt;" Margin="5,0" Click="NextPageButton_Click"/>
                </StackPanel>
                <TextBlock x:Name="PageInfoTextBlock" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>