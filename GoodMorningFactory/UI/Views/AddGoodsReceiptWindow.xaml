<!-- UI/Views/AddGoodsReceiptWindow.xaml -->
<!-- *** ملف جديد: نافذة تسجيل استلام البضائع *** -->
<Window x:Class="GoodMorningFactory.UI.Views.AddGoodsReceiptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        mc:Ignorable="d" Title="تسجيل استلام بضاعة" Height="600" Width="900"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStartupLocation="CenterOwner" FlowDirection="RightToLeft">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="معلومات الاستلام" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="أمر الشراء رقم:"/>
                <TextBlock x:Name="PurchaseOrderNumberTextBlock" Grid.Column="1" FontWeight="Bold" VerticalAlignment="Center"/>
            </Grid>
        </GroupBox>

        <DataGrid x:Name="ReceiptItemsDataGrid" Grid.Row="1" Margin="0,10,0,0" CanUserAddRows="False" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="المنتج" Binding="{Binding ProductName}" IsReadOnly="True" Width="2*"/>
                <DataGridTextColumn Header="الكمية المطلوبة" Binding="{Binding OrderedQuantity}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="الكمية المستلمة سابقاً" Binding="{Binding PreviouslyReceivedQuantity}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="الكمية المستلمة الآن" Binding="{Binding QuantityReceived}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="✅ تأكيد الاستلام" Grid.Row="2" HorizontalAlignment="Left" Padding="15,5" Margin="5" Click="ConfirmReceiptButton_Click"/>
    </Grid>
</Window>