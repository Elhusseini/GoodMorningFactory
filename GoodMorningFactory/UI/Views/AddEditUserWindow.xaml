<!-- UI/Views/AddEditUserWindow.xaml -->
<!-- نافذة إضافة وتعديل مستخدم -->
<Window x:Class="GoodMorningFactory.UI.Views.AddEditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="إضافة / تعديل مستخدم" Height="300" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" FlowDirection="RightToLeft">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="اسم المستخدم:" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="UsernameTextBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <Label Grid.Row="1" Grid.Column="0" Content="كلمة المرور:" VerticalAlignment="Center" Margin="5"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="1" Grid.Column="1" Margin="5"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="(اتركها فارغة لعدم التغيير)" Foreground="Gray" IsHitTestVisible="False" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10,0"/>

        <Label Grid.Row="2" Grid.Column="0" Content="الدور:" VerticalAlignment="Center" Margin="5"/>
        <ComboBox x:Name="RoleComboBox" Grid.Row="2" Grid.Column="1" Margin="5" DisplayMemberPath="Name" SelectedValuePath="Id"/>

        <Label Grid.Row="3" Grid.Column="0" Content="الحالة:" VerticalAlignment="Center" Margin="5"/>
        <CheckBox x:Name="IsActiveCheckBox" Grid.Row="3" Grid.Column="1" Margin="5" VerticalAlignment="Center" Content="نشط"/>

        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button x:Name="SaveButton" Content="💾 حفظ" Width="100" Margin="5" Padding="5" Click="SaveButton_Click"/>
            <Button Content="إلغاء" Width="100" Margin="5" Padding="5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>